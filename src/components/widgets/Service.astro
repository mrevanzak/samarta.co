---
import ServiceNavigator from '@/components/ui/react/ServiceNavigator';
import WidgetWrapper from '@/components/ui/WidgetWrapper.astro';
import type { Service } from '@/types';
import { cn } from '@/utils/utils';

type Props = {
  className?: string;
  titleClassName?: string;
  services: Array<Omit<Service, 'permalink'>>;
};

const { services, className, titleClassName } = Astro.props;
---

<WidgetWrapper containerClass={cn('flex gap-8 flex-col !px-0 py-8 w-100vw', className)}>
  <ServiceNavigator services={services} className={className} titleClassName={titleClassName} client:load />
</WidgetWrapper>
