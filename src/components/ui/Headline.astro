---
import { cn } from '@/utils/utils';

type Props = {
  title: string;
  className?: astroHTML.JSX.HTMLAttributes['class'];
};

const { title = await Astro.slots.render('title'), className } = Astro.props;
---

<h1 class={cn('border-l-4 border-primary pl-6 font-hero font-normal h0 layout leading-snug', className)}>{title}</h1>
