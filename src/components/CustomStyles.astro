---
import '@fontsource-variable/plus-jakarta-sans';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Plus Jakarta Sans Variable';

    --background-color: var(--aw-color-broken-white);
    --foreground-color: var(--aw-color-black);

    --aw-color-primary: 234 91 22;
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);
    --aw-color-broken-white: 255 245 233;
    --aw-color-black: 25 36 52;

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --foreground-color: var(--aw-color-broken-white);
    --background-color: var(--aw-color-black);

    --aw-color-primary: 234 91 22;
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }

  * {
    margin: 0;
    padding: 0;
  }

  /* Snap */

  .snap {
    width: 100%;
    height: 100%;
    scroll-snap-type: y mandatory;
    scrollbar-width: none;
    overflow: auto;
  }

  .snap-item {
    height: 100%;
    scroll-snap-align: center;
    display: grid;
    place-items: center;
  }

  @media (pointer: coarse) and (hover: none) {
    .snap {
      display: flex;
      scroll-snap-type: x mandatory;
    }
    .snap-item {
      flex-shrink: 0;
      width: 100%;
    }
  }

  /* Card */

  .card {
    margin: auto;
    inset: 0;
    position: absolute;
    background: white;
    display: grid;
    place-items: center;
    border-radius: 24px;
    aspect-ratio: 2 / 3;
    width: 220px;
    pointer-events: none;
  }
</style>
